<%

width   = Typus::Fluxiom.config.preview_width || 170 rescue nil
height  = Typus::Fluxiom.config.preview_height || 100 rescue nil
crop    = Typus::Fluxiom.config.preview_crop || false rescue nil
width   = crop ? width : height

%>

/* Overlay
------------------------------------- */

body.fancybox-overlay {
  /* prevent scrolling parent window while overlay is open */
  overflow: hidden;
}

.fancy-bg {
  display: none !important;
}

#fancybox-outer {
  background: none;
  border: 10px solid rgba(0,0,0,0.4);
  -webkit-border-radius: 1em;  
     -moz-border-radius: 1em;
          border-radius: 1em;
}

#fancybox-content {
  background: #fff;
  border: 1px solid #999;
}

/* Gallery
------------------------------------- */

.flux-gallery {
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 690px;
  zoom: 1;
  margin-bottom: 2em !important;
}

.flux-item {
  position: relative;
  float: left;
  list-style: none;
  margin: 5px 5px 20px 5px;
  text-align: center; 
  -webkit-user-select: none;
     -moz-user-select: none;
          user-select: none;
}

.flux-item img {
  vertical-align: middle;
}

.flux-image:hover {
  cursor: move;
}

.flux-gallery .ui-sortable-placeholder {
  visibility: visible !important;
  border: 1px dashed #ccc;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;    
}   

.flux-caption {
  position: absolute;
  overflow: hidden;
  resize: none;
  bottom: -16px;
  left: 0;
  width: 100%;
  height: 16px;
  min-height: 0 !important;
  border: 0;
  padding: 0;
  font-family: Verdana;
  font-size: 9px !important;
  color: #666;
  -webkit-transition: all .2s;
     -moz-transition: all .2s;  
          transition: all .2s;    
}     

.flux-gallery .ui-sortable-helper .flux-caption {
  opacity: 0;
}

.flux-caption:hover {
  background-color: #fffce1;
}

.flux-caption:focus {
  background: #fff !important;
  color: #000;
  border-color: #999;
  height: 50px;
  -webkit-box-shadow: none;
     -moz-box-shadow: none;  
          box-shadow: none;    
}

.flux-button {
  line-height: 1em;
  font-weight: bold;
  background: #fff;
  display: block;  
}

.flux-remove-button {
  color: #333;
  text-decoration: none !important;  
  padding: 3px 5px;     
  position: absolute;
  right: 0; 
  top: 0;
}

.flux-add-button {
  display: block;
  width: 150px;
  line-height: 100px;
  background: #fafafa;  
  text-align: center;
  border: 1px solid #eee;
  -webkit-transition: all .3s;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;  
          box-sizing: border-box;
}

.flux-add-button:hover {
  border-color: #ccc;;
}

/* Overrides
------------------------------------- */

.flux-add-button { 
  width: <%= width %>px; 
  height: <%= height %>px;  
  line-height: <%= height %>px;
}
