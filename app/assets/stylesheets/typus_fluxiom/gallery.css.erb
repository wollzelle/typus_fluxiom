/*
*= require_self
*/

<%

width   = Typus::Fluxiom.config.preview_width || 170
height  = Typus::Fluxiom.config.preview_height || 100
use_fit = Typus::Fluxiom.config.fit || false

%>

/* Overlay ----------------- */

body.fancybox-overlay {
  /* prevent scrolling parent window while overlay is open */
  overflow: hidden;
}

.fancy-bg {
  display: none !important;
}

#fancybox-outer {
  background: none;
  border: 10px solid rgba(0,0,0,0.4);
  -webkit-border-radius: 1em;  
     -moz-border-radius: 1em;
          border-radius: 1em;
}

#fancybox-content {
  background: #fff;
  border: 1px solid #999;
}

/* Gallery ----------------- */

.flux-gallery {
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 690px;
  zoom: 1;
  margin-bottom: 2em !important;
}

.flux-item {
  position: relative;
  float: left;
  list-style: none;
  margin: 5px !important;
  padding-bottom: 20px;
  width: 170px;
  height: 100px;
  border: 1px solid transparent;
  overflow: hidden;
  text-align: center; 
  -webkit-user-select: none;
     -moz-user-select: none;
          user-select: none;
}

.flux-item img {
  vertical-align: middle;
}

.flux-image-template {
  display: none;
}

.flux-image:hover {
  cursor: move;
}

.ui-sortable-placeholder {
  visibility: visible !important;
  border: 1px dashed #ccc;
}    

.flux-caption {
  width: 100%;
  height: 20px;
  padding: 0;
  min-height: 0 !important;
  font-family: verdana;
  font-size: 8px !important;
  color: #666;
  position: absolute;
  bottom: 0;
  left: 0;
  border: 1px solid #fff;
  resize: none;  
  overflow: hidden;
  -webkit-transition: height .2s;
     -moz-transition: height .2s;  
          transition: height .2s;    
}     

.flux-caption:hover {
  background-color: #fffce1;
  border-color: #fffce1;    
}

.flux-caption:focus {
  background: #fff !important;
  color: #000;
  border-color: #999;
  height: 50px;
  -webkit-box-shadow: none;
     -moz-box-shadow: none;  
          box-shadow: none;    
}

.flux-button {
  line-height: 1em;
  font-weight: bold;
  background: #fff;
  display: block;  
}

.flux-remove-button {
  text-decoration: none !important;  
  padding: 3px 5px;     
  position: absolute;
  right: 0;
  top: 0; 
  color: #333;
}

.flux-item-add {
  padding: 0;
}

.flux-add-button {
  display: block;
  line-height: 100px;
  background: #eee;
  background: #fafafa;  
  text-align: center;
}

/* Overrides ----------------- */

.flux-item { 
  width: <%= width %>px; 
  height: <%= height %>px;
}

.flux-add-button { 
  line-height: <%= height %>px;
}
