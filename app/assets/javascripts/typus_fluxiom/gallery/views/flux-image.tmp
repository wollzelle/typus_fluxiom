<script id="flux-image-template" type="text/html">    
  <li class="flux-item flux-image">
    <img src="{{ img_src }}">
    <a href="#" class="flux-button flux-remove-button" title="Remove image">&#215;</a>
    <% if @translations.nil? %>
      <textarea class="flux-caption" name="<%= "${@base_name}[description]"%>">{{ description }}</textarea>    
    <% else %>
    <% @translations.each do |locale, title| %>
       <textarea class="flux-caption translation lang-<%= locale %>" name="<%= "${@base_name}[description][#{locale}]" %>">${description}</textarea>
      <% end %>
    <% end %>
    <input class="flux-public-url" type="hidden" name="<%= "{{base_name}}{{public_url}}" %>" value="${public_url}">
  </li>
</script>