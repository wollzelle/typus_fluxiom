/* reset
------------------------------------- */

html, body {
  margin      : 0;
  padding     : 0;
  font-family : 'Lucida Grande', sans-serif;
  font-size   : 80%;
  line-height : 1em;
}

/* flux-toolbar
------------------------------------- */

#flux-toolbar {
  position      : fixed;
  top           : 0px;
  width         : 100%;
  padding       : 5px 0;
  background    : #eee;
  border-bottom : 1px solid #999;
  z-index       : 20;
}

#flux-tags {  
  float       : left;
  margin-left : 20px;
  width       : 65%;
}

.flux-tag {
  float       : left;
  background  : #bbb;
  border      : 2px solid #bbb;  
  color       : #fff;
  margin      : 5px;
  padding     : 4px 6px;
  cursor      : pointer;  
  white-space : nowrap;

  -webkit-user-select: none;  
     -moz-user-select: none;
          user-select: none;  
  
  -webkit-border-radius : 15px;
     -moz-border-radius : 15px;
          border-radius : 15px;
}

.flux-tag input { 
  display : none; 
}

.flux-tag.active {
  background : #777;
  border-color: #777;
  color: #fff;
}

.filter-tag {
  background   : none;
  border-color : #777;
  color        : #777;
  cursor       : default;
}

#flux-actions {
  float        : right;
  padding      : 5px 0;
  margin-right : 20px;
  width        : 28%;
  text-align   : right;
}

#flux-use-button {
  color       : #fff;
  border      : 0;
  background  : #777;
  font-weight : bold;
  padding     : 4px 6px;
  cursor      : pointer;	
  margin-left : 10px;

  -webkit-border-radius : 5px;
     -moz-border-radius : 5px;
          border-radius : 5px;
}

#flux-use-button.active {
  background: #55B51A;
}

/* flux-assets
------------------------------------- */

#flux-assets {
  width  : 90%;
  margin : 80px auto 0 auto;
}

#flux-assets ol {
  margin     : 0;
  padding    : 0;
  list-style : none;
}

.flux-asset {
  border      : 3px solid #fff;
  margin      : 5px;
  padding     : 5px;
  float       : left;
  text-align  : center;
  position    : relative;
  width       : 256px;
  height      : 256px;  
  line-height : 256px;

  -webkit-user-select : none;  
     -moz-user-select : none;
          user-select : none;    
  
  -webkit-border-radius : 4px;
     -moz-border-radius : 4px;
          border-radius : 4px;
}

.flux-asset img {
  vertical-align : middle;
}

.flux-asset .caption {
  position      : absolute;
  left          : 50%;
  bottom        : 20%;
  margin-left   : -115px;
  width         : 80%;
  padding       : 5px;
  line-height   : 1em;
  overflow      : hidden;
  white-space   : nowrap;
  text-overflow : ellipsis; 
  text-align    : center;
  background    : rgba(0,0,0,.5);
  color         : #fff;
  opacity       : 0;

  -webkit-border-radius : 10px;
     -moz-border-radius : 10px;
          border-radius : 10px;

  -webkit-transition : opacity .2s linear;
     -moz-transition : opacity .2s linear;  
          transition : opacity .2s linear;
}

.flux-asset.ui-selected .caption {
  opacity: 1;
}

.ui-selecting {
  border-color : #eee;
}

.ui-selected {
  border : 3px solid #3366cc;

  -webkit-box-shadow : 0 0 4px #99ccff;
     -moz-box-shadow : 0 0 4px #99ccff;
          box-shadow : 0 0 4px #99ccff;
}

.ui-selectable-helper { 
  position   : absolute; 
  z-index    : 100; 
  background : #000;
  opacity    : 0.2;
}
